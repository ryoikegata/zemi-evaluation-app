generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  student_id String
  email String @unique
  password String
  group_id Int
  createdAt DateTime @default(now())
}

model Role {
  id    Int    @id @default(autoincrement())
  role  String
}

model Group {
  id    Int    @id @default(autoincrement())
  group  String 
}

model AttendanceStatus {
  id   Int    @id @default(autoincrement())
  status String  // lateness, presence, absence など
}

model ClassAttendance {
  id                   Int              @id @default(autoincrement())
  studentId            String           // 外部キーがある場合は、別モデルに関連付ける
  attendanceStatusId   Int
  classDate            DateTime
}

model EventAttendance {
  id                 Int              @id @default(autoincrement())
  studentId          String           // 外部キーがある場合は、別モデルに関連付ける
  attendanceStatusId Int
  eventDate          DateTime
}

model Event {
  id       Int    @id @default(autoincrement())
  name     String
  description String
  groupId Int
  eventDate DateTime
}

model Work {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  groupId Int
  workDate  DateTime
}



